generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ユーザーと認証
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  password      String?
  level         Int       @default(1)
  xp            Int       @default(0)
  rank          String    @default("Bronze")
  streak        Int       @default(0)
  longestStreak Int       @default(0)
  lastActiveAt  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts         Account[]
  sessions         Session[]
  attempts         Attempt[]
  entries          Entry[]
  favorites        Favorite[]
  improvements     Improvement[]
  badges           UserBadge[]
  likes            Like[]
  comments         Comment[]
  notifications    Notification[]
  userChallenges   UserChallenge[]
  improvementVotes ImprovementVote[]
  gameStats        UserGameStats?

  @@index([email])
  @@index([xp])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// 用語
model Term {
  id            String    @id @default(cuid())
  word          String    @unique
  category      String
  subcategory   String?
  officialDef   String    @db.Text
  ngWords       String[]
  tags          String[]
  totalAttempts Int       @default(0)
  totalSuccess  Int       @default(0)
  viewCount     Int       @default(0)
  favoriteCount Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  attempts        Attempt[]
  entries         Entry[]
  favorites       Favorite[]
  improvements    Improvement[]
  dailyChallenges DailyChallenge[]
  stats           TermStats?

  @@index([category])
  @@index([totalAttempts])
}

// 挑戦記録
model Attempt {
  id          String   @id @default(cuid())
  userId      String
  termId      String
  difficulty  String
  aiModel     String
  explanation String   @db.Text
  success     Boolean
  confidence  Float
  aiResponse  String   @db.Text
  aiComment   String?  @db.Text
  xpEarned    Int      @default(0)
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  term        Term     @relation(fields: [termId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([termId])
  @@index([createdAt])
}

// エントリー（投稿された説明文）
model Entry {
  id             String    @id @default(cuid())
  userId         String
  termId         String
  explanation    String    @db.Text
  difficulty     String
  confidence     Float
  isCrown        Boolean   @default(false)
  crownStartDate DateTime?
  crownDays      Int       @default(0)
  easyScore      Float?
  normalScore    Float?
  hardScore      Float?
  version        Int       @default(1)
  likeCount      Int       @default(0)
  commentCount   Int       @default(0)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  term           Term          @relation(fields: [termId], references: [id], onDelete: Cascade)
  improvements   Improvement[]
  likes          Like[]
  comments       Comment[]

  @@index([userId])
  @@index([termId])
  @@index([isCrown])
  @@index([likeCount])
}

// お気に入り
model Favorite {
  id        String   @id @default(cuid())
  userId    String
  termId    String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  term      Term     @relation(fields: [termId], references: [id], onDelete: Cascade)

  @@unique([userId, termId])
}

// 共作モード - 改善提案
model Improvement {
  id                String    @id @default(cuid())
  originalEntryId   String
  userId            String
  termId            String
  newExplanation    String    @db.Text
  improvementReason String?   @db.Text

  beforeEasy        Float?
  beforeNormal      Float?
  beforeHard        Float?
  afterEasy         Float
  afterNormal       Float
  afterHard         Float

  status            String    @default("pending") // pending, approved, rejected
  voteCount         Int       @default(0)
  approvedAt        DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  originalEntry     Entry             @relation(fields: [originalEntryId], references: [id], onDelete: Cascade)
  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  term              Term              @relation(fields: [termId], references: [id], onDelete: Cascade)
  votes             ImprovementVote[]

  @@index([originalEntryId])
  @@index([userId])
  @@index([status])
  @@index([voteCount])
}

// 改善提案への投票
model ImprovementVote {
  id             String      @id @default(cuid())
  improvementId  String
  userId         String
  voteType       String      // upvote, downvote
  createdAt      DateTime    @default(now())

  improvement    Improvement @relation(fields: [improvementId], references: [id], onDelete: Cascade)
  user           User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([improvementId, userId])
  @@index([improvementId])
  @@index([userId])
}

// バッジシステム
model Badge {
  id          String      @id @default(cuid())
  name        String      @unique
  nameEn      String
  description String      @db.Text
  category    String      // beginner, expert, social, special
  iconName    String
  condition   String      @db.Text
  rarity      String      @default("common") // common, rare, epic, legendary
  createdAt   DateTime    @default(now())

  users       UserBadge[]

  @@index([category])
  @@index([rarity])
}

model UserBadge {
  id       String   @id @default(cuid())
  userId   String
  badgeId  String
  earnedAt DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge    Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@index([userId])
  @@index([badgeId])
}

// デイリーチャレンジ
model DailyChallenge {
  id         String          @id @default(cuid())
  termId     String
  date       DateTime        @unique
  difficulty String
  createdAt  DateTime        @default(now())

  term       Term            @relation(fields: [termId], references: [id], onDelete: Cascade)
  attempts   UserChallenge[]

  @@index([date])
  @@index([termId])
}

model UserChallenge {
  id               String         @id @default(cuid())
  userId           String
  dailyChallengeId String
  completed        Boolean        @default(false)
  success          Boolean?
  score            Float?
  attemptedAt      DateTime       @default(now())

  user             User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  dailyChallenge   DailyChallenge @relation(fields: [dailyChallengeId], references: [id], onDelete: Cascade)

  @@unique([userId, dailyChallengeId])
  @@index([userId])
  @@index([dailyChallengeId])
}

// いいねシステム
model Like {
  id        String   @id @default(cuid())
  userId    String
  entryId   String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  entry     Entry    @relation(fields: [entryId], references: [id], onDelete: Cascade)

  @@unique([userId, entryId])
  @@index([userId])
  @@index([entryId])
}

// コメントシステム
model Comment {
  id        String   @id @default(cuid())
  userId    String
  entryId   String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  entry     Entry    @relation(fields: [entryId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([entryId])
  @@index([createdAt])
}

// 通知システム
model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String   // like, comment, improvement_approved, badge_earned, challenge_complete
  title     String
  message   String   @db.Text
  link      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
  @@index([createdAt])
}

model UserGameStats {
  id            String   @id @default(cuid())
  userId        String   @unique
  xp            Int      @default(0)
  level         Int      @default(1)
  rank          String   @default("Bronze")
  streak        Int      @default(0)
  longestStreak Int      @default(0)
  lastActiveAt  DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([xp])
}

model TermStats {
  id            String   @id @default(cuid())
  termId        String   @unique
  viewCount     Int      @default(0)
  totalAttempts Int      @default(0)
  totalSuccess  Int      @default(0)
  favoriteCount Int      @default(0)
  updatedAt     DateTime @updatedAt

  term          Term     @relation(fields: [termId], references: [id], onDelete: Cascade)

  @@index([totalAttempts])
  @@index([viewCount])
}
