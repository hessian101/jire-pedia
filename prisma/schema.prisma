generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ユーザーと認証
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  password      String?
  level         Int       @default(1)
  xp            Int       @default(0)
  rank          String    @default("Bronze")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  attempts      Attempt[]
  entries       Entry[]
  favorites     Favorite[]

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// 用語
model Term {
  id            String    @id @default(cuid())
  word          String    @unique
  category      String
  subcategory   String?
  officialDef   String    @db.Text
  ngWords       String[]
  tags          String[]
  totalAttempts Int       @default(0)
  totalSuccess  Int       @default(0)
  viewCount     Int       @default(0)
  favoriteCount Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  attempts      Attempt[]
  entries       Entry[]
  favorites     Favorite[]

  @@index([category])
  @@index([totalAttempts])
}

// 挑戦記録
model Attempt {
  id          String   @id @default(cuid())
  userId      String
  termId      String
  difficulty  String
  aiModel     String
  explanation String   @db.Text
  success     Boolean
  confidence  Float
  aiResponse  String   @db.Text
  aiComment   String?  @db.Text
  xpEarned    Int      @default(0)
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  term        Term     @relation(fields: [termId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([termId])
  @@index([createdAt])
}

// エントリー（投稿された説明文）
model Entry {
  id             String    @id @default(cuid())
  userId         String
  termId         String
  explanation    String    @db.Text
  difficulty     String
  confidence     Float
  isCrown        Boolean   @default(false)
  crownStartDate DateTime?
  crownDays      Int       @default(0)
  easyScore      Float?
  normalScore    Float?
  hardScore      Float?
  version        Int       @default(1)
  likeCount      Int       @default(0)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  term           Term      @relation(fields: [termId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([termId])
  @@index([isCrown])
}

// お気に入り
model Favorite {
  id        String   @id @default(cuid())
  userId    String
  termId    String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  term      Term     @relation(fields: [termId], references: [id], onDelete: Cascade)

  @@unique([userId, termId])
}
